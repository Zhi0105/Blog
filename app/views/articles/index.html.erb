<div class="article_index_main">
    <br />
    <div>
        <h1>Blog Article</h1>
    </div>
    <br />
    <div>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th colspan="2">Action</th>
                </tr>

            </thead>
            <tbody>
                <% @articles.each do |article|%>
                    <tr>
                        <td><%= article.id %></td>
                        <td><%= article.name %></td>
                        <td><%= link_to 'view', article_show_path(article.id) %></td>
                        <td><%= link_to 'edit', article_edit_path(article.id) %></td>
                        
                    </tr>
                <% end %>
            </tbody>
        </table>
        <br /> <br />
    </div>
    <div>
        <%= link_to 'New article', articles_new_path, class: 'new_article' %>
        
    </div>
</div>